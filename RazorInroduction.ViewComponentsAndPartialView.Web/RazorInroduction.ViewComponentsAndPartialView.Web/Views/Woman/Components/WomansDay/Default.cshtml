@using RazorInroduction.ViewComponentsAndPartialView.Web.Models.ViewModels
@model WomansDayViewModel

<div class="card">
    <h5 class="card-header" style="background-color:#f8d7da">Women's day</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <h5 class="card-title">Happy 8 March International Women's Day</h5>
                <p class="card-text">Check out today's discounted products</p>
                <a href="#" class="btn btn-danger">See more</a>
            </div>
            @foreach (var item in Model.Products)
            {
                <div class="col-1">
                    <img class="card-img-top" src="/images/smallImage.png" width="100" height="100" alt="Card image cap">
                </div>
            }
        </div>
    </div>
</div>
